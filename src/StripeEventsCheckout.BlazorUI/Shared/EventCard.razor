<div class="flex flex-col shadow overflow-hidden hover:shadow-2xl">
    
    @if(Event != null) {
        <div class="flex-shrink-0 cursor-pointer">
        <NavLink href="@EventPageRoute">
            <img class="max-h-36 w-full object-cover" src="@Event.Images[0]" alt="" />
        </NavLink>
        </div>
        <div class="flex-1 bg-white p-6 flex flex-col justify-between">
            <div class="flex-1">
                <div class="block mt-2">
                    <div class="text-lg font-semibold text-gray-900">
                        @Event.Name
                    </div>
                    <div style="color:#f05537" class="mt-1 text-sm">
                        Fri, Oct 8, 3:00 PM
                    </div>
                    <div class="mt-3 text-sm text-gray-400">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit
                    </div>
                </div>
            </div>
            <div class="mt-2 mb-4 flex items-center">
                <div>
                    <div class="text-sm mb-4 font-medium text-gray-900">
                        OWNER NAME METADATA
                    </div>
                    <div class="flex space-x-1 text-sm text-gray-900">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        5.1 followers
                    </div>
                </div>
            </div>
        </div>
    }

</div>

@code {
    [Parameter]
    public EventInfo? Event {get;set;} = null;
    public string EventPageRoute => $"event/{Event.StripeProductId}";   
}